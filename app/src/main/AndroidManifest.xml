<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.digi.android.sample.i2c"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-permission android:name="com.digi.android.permission.I2C" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/digi_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/digi_icon"
        android:supportsRtl="true">
        <uses-library
            android:name="com.digi.android"
            android:required="true" />

        <activity android:name=".I2CSampleActivity"
            android:exported="true"
            android:screenOrientation="landscape"
            android:configChanges="keyboardHidden|orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>
